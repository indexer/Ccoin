<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small">

        <ImageView
            android:id="@+id/coin_image"
            android:layout_width="@dimen/image_default"
            android:layout_height="@dimen/image_default"
            android:padding="@dimen/padding_small"
            android:scaleType="centerCrop"
            android:src="@drawable/place_holder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/secondary_padding"
            android:text="@string/app_name"
            android:textSize="@dimen/title_default"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/coin_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/coin_algo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_all_inclusive_black_24dp"
            android:drawablePadding="@dimen/margin_small"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:padding="@dimen/secondary_padding"
            android:text="@string/app_name"
            android:textSize="@dimen/secondary_default"
            app:layout_constraintStart_toEndOf="@+id/coin_image"
            app:layout_constraintTop_toBottomOf="@+id/coin_name" />

        <TextView
            android:id="@+id/coin_total_supply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_trending_up_black_24dp"
            android:drawablePadding="@dimen/margin_small"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:padding="@dimen/secondary_padding"
            android:text="@string/app_name"
            android:textSize="@dimen/secondary_default"
            app:layout_constraintStart_toEndOf="@+id/coin_image"
            app:layout_constraintTop_toBottomOf="@+id/coin_algo" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>